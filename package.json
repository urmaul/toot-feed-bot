{
  "name": "toot-feed-bot",
  "version": "0.1.0",
  "description": "A bot that forwards toots from your Fediverse feed to your matrix inbox.",
  "keywords": [
    "mastodon",
    "pleroma",
    "misskey",
    "matrix"
  ],
  "author": {
    "name": "Bogdan Kolbik",
    "url": "https://urmaul.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/urmaul/toot-feed-bot.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "build-tsc": "tsc",
    "build-dev": "npm run clean && tsc",
    "clean": "(rm -r ./dist 2>/dev/null || true)",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
    "test": "mocha",
    "upgrade": "npx npm-check -u"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/crypto-js": "^4.2.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@keyv/sqlite": "^3.6.6",
    "@tsed/logger": "^6.6.3",
    "crypto-js": "^4.2.0",
    "env-var": "^7.4.1",
    "keyv": "^4.5.4",
    "matrix-bot-sdk": "^0.7.0",
    "megalodon": "^8.1.6",
    "node-html-parser": "^6.1.11"
  }
