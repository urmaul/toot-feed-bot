{
  "name": "toot-feed-bot",
  "version": "0.1.0",
  "description": "A bot that forwards toots from your Fediverse feed to your matrix inbox.",
  "keywords": [
    "mastodon",
    "pleroma",
    "misskey",
    "matrix"
  ],
  "author": {
    "name": "Bogdan Kolbik",
    "url": "https://urmaul.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/urmaul/toot-feed-bot.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "build-dev": "npm run clean && tsc",
    "clean": "(rm -r ./dist 2>/dev/null || true)",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
    "prepare": "npm run build",
    "test": "mocha",
    "upgrade": "npx npm-check -u"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "chai": "^4.1.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "mocha": "^10.2.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@tsed/logger": "^6.3.3",
    "env-var": "^7.3.0",
    "matrix-bot-sdk": "^0.6.3",
    "megalodon": "^4.1.3",
    "node-html-parser": "^6.1.4"
  }
}
